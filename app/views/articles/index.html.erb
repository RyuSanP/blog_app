<h1>Articles#index</h1>
<%= link_to "新規記事作成", new_article_path %><br><hr>
<% @articles.each do |article| %>
  <%= link_to article.title, article_path(article) %><br>
  <%= article.content %><br>
  <%= article.created_at %><br>
  <%= link_to "詳細", article_path(article) %>
  <%= link_to "編集", edit_article_path(article) %>
  <%= link_to "削除", article_path(article), method: :delete, data: {confirm: "削除していいですか"} %>
  <hr>
<% end %>
